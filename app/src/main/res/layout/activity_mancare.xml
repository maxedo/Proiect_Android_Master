<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".AdaugaMancare">
    
    <ImageView
        android:id="@+id/random_food_image"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:background="#ffffff"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/food"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


    <TextView
        android:id="@+id/tipul_gramajului_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:gravity="center"
        android:text="tipul gramajului"
        android:textColor="#ffffff"
        android:textSize="16sp"
        app:layout_constraintHorizontal_bias="0.863"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/random_food_image" />

    <EditText
        android:id="@+id/gramaj_edit_text"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="24dp"
        android:background="#d3d3d3"
        android:hint="Gramaj"
        android:inputType="numberDecimal"
        android:padding="8dp"
        android:textColor="#000000"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tipul_gramajului_label" />

    <Spinner
        android:id="@+id/unit_spinner"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="24dp"
        android:background="#d3d3d3"
        app:layout_constraintLeft_toRightOf="@id/gramaj_edit_text"
        app:layout_constraintTop_toBottomOf="@id/tipul_gramajului_label" />

    <EditText
        android:id="@+id/numele_mancarii_edit_text"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="#d3d3d3"
        android:hint="Numele mancarii"
        android:padding="8dp"
        android:textColor="#000000"
        app:layout_constraintHorizontal_bias="0.468"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gramaj_edit_text" />

    <Button
        android:id="@+id/finalizare_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="196dp"
        android:background="#d3d3d3"
        android:padding="16dp"
        android:text="Buton finalizare"
        android:textColor="#000000"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/numele_mancarii_edit_text" />




</androidx.constraintlayout.widget.ConstraintLayout>